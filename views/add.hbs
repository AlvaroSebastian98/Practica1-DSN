{{> head }}

{{> navbar }}
    
    <div class="jumbotron">
        <!-- <h1 class="display-4">Hello, {{capitalizar 'alvaro manuico'}}!</h1> -->
        <h1 class="display-4">Agrega un producto</h1>
        <hr class="my-4">

        <form action="/agregar_producto" method="post">
            <div class="form-group">
                <label for="inputAddress">Nombre</label>
                <input name="nombre" type="text" class="form-control" id="inputAddress" placeholder="nombre">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Precio</label>
                <input name="precio" type="number" class="form-control" id="inputAddress2" placeholder="precio">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                <label for="inputEmail4">ID categoría</label>
                <input name="idcat" type="number" class="form-control" id="inputEmail4" placeholder="id categoría">
                </div>
                <div class="form-group col-md-6">
                <label for="inputPassword4">Stock</label>
                <input name="stock" type="number" class="form-control" id="inputPassword4" placeholder="stock">
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
        
    </div>

{{> footer}}